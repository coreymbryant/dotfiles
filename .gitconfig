[color]
    ui = true
[core]
    # if line endings are CRLF converted them to LF on commit,
    # otherwise leave them alone
    autocrlf = input
    editor = vim
    trustctime = false
[credential]
    helper = cache --timeout=86400
[diff]
    # this setting only works with git 2.11+
    # http://stackoverflow.com/questions/25550582
    wsErrorHighLight = all
[merge]
    tool = vimdiff
[push]
    default = upstream
[tag]
    sort = version:refname
[alias]
    ca = commit -am
    ps = push --follow-tags
[include]
    path = ~/.gitconfig.local
